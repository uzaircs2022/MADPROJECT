<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/AppColoe"/>

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">


        <ImageView
            android:id="@+id/shapes"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/ic_shapes"/>
        <ImageView
            android:id="@+id/animals_figures"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/ic_animals"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/plants_figures"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/ic_plants"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/cars_figures"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/ic_cars"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

</RelativeLayout>