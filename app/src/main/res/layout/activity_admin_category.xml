<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Add New Product"
        android:background="@drawable/background"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>


    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="15dp">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shapes"
                android:layout_width="175dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_shapes" />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shapes"
                android:textStyle="bold"
                android:textColor="@color/AppColoe"
                android:textSize="25dp"
                />
            
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/animals_figures"
                android:layout_width="175dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_animals"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animals"
                android:textStyle="bold"
                android:textColor="@color/AppColoe"
                android:textSize="25dp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/plants_figures"
                android:layout_width="175dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_plants" />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plants"
                android:textStyle="bold"
                android:textColor="@color/AppColoe"
                android:textSize="25dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/cars_figures"
                android:layout_width="175dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_cars" />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicles"
                android:textStyle="bold"
                android:textColor="@color/AppColoe"
                android:textSize="25dp"
                />


        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_main"
        android:text="New Orders"
        android:layout_above="@+id/admin_logout_btn"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        android:textSize="20dp" />


    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn_main"
        android:text="Logout"
        android:textAllCaps="false"
        android:textSize="20dp" />

</RelativeLayout>